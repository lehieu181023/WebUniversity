@model WebUniversity.Models.Student
@{
    ViewData["Title"] = "Info student";
    Layout = "~/Areas/Student/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="form-horizontal">
    <div class="row mb-3">
        <label for="StudentCode" class="control-label col-md-2 text-right">Student Code :</label>
        <div class="col-md-4">
            <p class="form-control-static">@Model.StudentCode</p>
        </div>
    </div>
    <div class="row mb-3">
        <label for="FullName" class="control-label col-md-2 text-right">Full Name :</label>
        <div class="col-md-4">
            <p class="form-control-static">@Model.FullName</p>
        </div>
        <label for="BirthDate" class="control-label col-md-2 text-right">Birth Date :</label>
        <div class="col-md-4">
            <p class="form-control-static">@Model.BirthDate.ToString("yyyy-MM-dd")</p>
        </div>
    </div>
    <div class="row mb-3">
        <label for="Gender" class="control-label col-md-2 text-right">Gender :</label>
        <div class="col-md-4">
            <p class="form-control-static">@(Model.Gender ? "Male" : "Female")</p>
        </div>
        <label for="Address" class="control-label col-md-2 text-right">Address :</label>
        <div class="col-md-4">
            <p class="form-control-static">@Model.Address</p>
        </div>
    </div>
    <div class="row mb-3">
        <label for="Email" class="control-label col-md-2 text-right">Email :</label>
        <div class="col-md-4">
            <p class="form-control-static">@Model.Email</p>
        </div>
        <label for="PhoneNumber" class="control-label col-md-2 text-right">Phone Number :</label>
        <div class="col-md-4">
            <p class="form-control-static">@Model.PhoneNumber</p>
        </div>
    </div>
    <div class="row mb-3">
        <label for="ClassId" class="control-label col-md-2 text-right">Class :</label>
        <div class="col-md-4">
            <p class="form-control-static">@Model.Class?.ClassName</p>
        </div>
        <label for="Status" class="control-label col-md-2 text-right">Status :</label>
        <div class="col-md-4">
            <p class="form-control-static">@(Model.Status ? "Active" : "Inactive")</p>
        </div>
    </div>
    <div class="row mb-3">
        <label for="Image" class="control-label col-md-2 text-right">Image :</label>
        <div class="col-md-4">
            <img src="@Model.Image" alt="Student Image" class="img-thumbnail" style="width: 100px; height: 100px; object-fit: cover; " />
        </div>
        <label for="Cccd" class="control-label col-md-2 text-right">CCCD :</label>
        <div class="col-md-4">
            <p class="form-control-static">@Model.Cccd</p>
        </div>
    </div>
</div>