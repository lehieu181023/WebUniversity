@model WebUniversity.Models.Lecturer
@{
    ViewData["Title"] = "Info lecturer";
    Layout = "~/Areas/Lecturer/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container mt-4">
    <h2 class="text-center mb-4">Lecturer Information</h2>
    <div class="form-horizontal">
        <!-- Các trường thông tin giảng viên ở đây -->
        <div class="row mb-3">
            <label for="LecturerCode" class="control-label col-md-2 text-right">Lecturer Code:</label>
            <div class="col-md-4">
                <p class="form-control-static">@Model.LecturerCode</p>
            </div>
        </div>
        <div class="row mb-3">
            <label for="FullName" class="control-label col-md-2 text-right">Full Name:</label>
            <div class="col-md-4">
                <p class="form-control-static">@Model.FullName</p>
            </div>
            <label for="BirthDate" class="control-label col-md-2 text-right">Birth Date:</label>
            <div class="col-md-4">
                <p class="form-control-static">@Model.BirthDate?.ToString("yyyy-MM-dd")</p>
            </div>
        </div>
        <div class="row mb-3">
            <label for="Gender" class="control-label col-md-2 text-right">Gender:</label>
            <div class="col-md-4">
                <p class="form-control-static">@(Model.Gender ? "Male" : "Female")</p>
            </div>
            <label for="Address" class="control-label col-md-2 text-right">Address:</label>
            <div class="col-md-4">
                <p class="form-control-static">@Model.Address</p>
            </div>
        </div>
        <div class="row mb-3">
            <label for="Email" class="control-label col-md-2 text-right">Email:</label>
            <div class="col-md-4">
                <p class="form-control-static">@Model.Email</p>
            </div>
            <label for="PhoneNumber" class="control-label col-md-2 text-right">Phone Number:</label>
            <div class="col-md-4">
                <p class="form-control-static">@Model.PhoneNumber</p>
            </div>
        </div>
        <div class="row mb-3">
            <label for="ClassId" class="control-label col-md-2 text-right">Faculty:</label>
            <div class="col-md-4">
                <p class="form-control-static">@Model.Faculty?.FacultyName</p>
            </div>
            <label for="Status" class="control-label col-md-2 text-right">Status:</label>
            <div class="col-md-4">
                <p class="form-control-static">@(Model.Status ? "Active" : "Inactive")</p>
            </div>
        </div>
        <div class="row mb-3">
            <label for="Image" class="control-label col-md-2 text-right">Image:</label>
            <div class="col-md-4">
                <img src="@Model.Image" alt="Lecturer Image" class="img-thumbnail" style="width: 100px; height: 100px; object-fit: cover;" />
            </div>
            <label for="Cccd" class="control-label col-md-2 text-right">CCCD:</label>
            <div class="col-md-4">
                <p class="form-control-static">@Model.Cccd</p>
            </div>
        </div>

        <!-- Nút Print -->
        <div class="row mb-3">
            <div class="col-md-12 text-center">
                <a class="btn btn-primary" asp-area="Lecturer" asp-controller="Info" asp-action="ReportViewPDF">Print</a>
            </div>
        </div>
    </div>
</div>

<style>
    .form-horizontal .control-label {
        font-weight: bold;
        color: #333;
    }

    .form-control-static {
        padding: 8px;
        background-color: #f9f9f9;
        border-radius: 4px;
        border: 1px solid #ddd;
    }

    .img-thumbnail {
        border: 1px solid #ddd;
        border-radius: 4px;
    }

    .btn {
        margin-top: 20px;
    }
</style>