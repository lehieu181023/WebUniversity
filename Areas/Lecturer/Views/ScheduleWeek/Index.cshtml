

@{
    ViewData["Title"] = "ScheduleWeek";
    Layout = "~/Areas/Lecturer/Views/Shared/_LayoutAdmin.cshtml";
}
<link href="~/css/print.css" rel="stylesheet" />

<div class="pagetitle">
    <h1>Schedule</h1>
    <nav>

    </nav>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <div class="top-row">
                        <div>
                            <label for="week">Week:</label>
                            <select class="form-select" id="week" onchange="loaddata(this.value);">
                                <option value="1">This week</option>

                                <option value="2">Next week</option>
                            </select>
                        </div>
                        <button class="btn" onclick="window.print()">🖨️ Print schedule</button>
                    </div>

                    <!-- Table with stripped rows -->
                    <div id="listdata" >

                    </div>

                    <!-- End Table with stripped rows -->

                </div>
            </div>

        </div>
    </div>
</section>
<div id="target-div">

</div>

@section Scripts {
    <script src="~/Admin/js/ScheduleWeekLecturer.js"></script>
}




