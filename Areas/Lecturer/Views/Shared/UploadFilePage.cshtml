@model WebUniversity.Models.JqueryUploadModel
<div>
    <div class="mb-3">
        <a id="btnthem-@Model.Name"
           class="btn btn-primary"
           role="button"
           onclick="$('#InputFile-@Model.Name').click()">Chọn ảnh</a>

        <input type="hidden" name="@Model.Name" id="imgfile-value-@Model.Name" value="@Model.Value">

        <input hidden
               onchange="UploadFile(this,'@Model.Name')"
               type="file"
               class="form-control"
               id="InputFile-@Model.Name"
               placeholder=""
               aria-describedby="fileHelpId"
               accept=".txt,.csv,.jpg,.png,.gif,.png" />
        <div id="Preview-@Model.Name" class="mt-3" hidden>
            <picture>
                <source srcset="sourceset" type="image/svg+xml+jpg+png" />
                <img id="imgfile-@Model.Name"
                     src="@Model.Value"
                     class="img-fluid"
                     alt="image desc"
                     width="200px" height="200px" />
            </picture>
            <div id="progress-container-@Model.Name">
                <div id="progress-bar-@Model.Name">0%</div>
            </div>
            <i class="fa-solid fa-xmark" role="button" onclick="deletefile($('#imgfile-@Model.Name').attr('src'),'@Model.Name')"></i>

        </div>
    </div>

</div>
<style>
    #progress-container-@Model.Name {
        width: 100%;
        background: #f3f3f3;
        border: 1px solid #ddd;
        border-radius: 5px;
        margin: 20px 0;
        display: none;
    }
    #progress-bar-@Model.Name {
        height: 20px;
        width: 0;
        background: #4caf50;
        border-radius: 5px;
        text-align: center;
        line-height: 20px;
        color: white;
    }
</style>
<script>
    $(document).ready(function() {
      if($('#imgfile-@Model.Name').attr('src') != null){
        $('#Preview-@Model.Name').removeAttr('hidden');
      }
    });
</script>
