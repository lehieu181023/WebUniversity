    ======================================================== -->
</head>

<body>
    <div id="root"></div>
      
    <!-- Màn hình Block UI -->
    <div id="blockUI">
        <div class="text-center bg-white p-4 rounded shadow">
            <div class="spinner-border text-primary" role="status"></div>
            <p class="mt-2 fw-bold">Loading...</p>
        </div>
    </div>
    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">

        <div class="d-flex align-items-center justify-content-between">
            <a asp-area="admin" asp-controller="DashBoard" action="Index" class="logo d-flex align-items-center">
                <span class="d-none d-lg-block">Admin</span>
            </a>
            <i class="bi bi-list toggle-sidebar-btn"></i>
        </div><!-- End Logo -->

        <div class="search-bar">
            <form class="search-form d-flex align-items-center" method="POST" action="#">
                <input type="text" name="query" placeholder="Search" title="Enter search keyword">
                <button type="submit" title="Search"><i class="bi bi-search"></i></button>
            </form>
        </div><!-- End Search Bar -->


    </header><!-- End Header -->
    <!-- ======= Sidebar ======= -->
    <aside id="sidebar" class="sidebar">

        <ul class="sidebar-nav" id="sidebar-nav">

            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="admin" asp-controller="DashBoard" action="Index">
                    <i class="bi bi-grid"></i>
                    <span>Dashboard</span>
                </a>
            </li><!-- End Dashboard Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="admin" asp-controller="Student" action="Index">
                    <i class="bi bi-menu-button-wide"></i><span>Student management</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="admin" asp-controller="Class" action="Index">
                    <i class="bi bi-layout-text-window-reverse"></i><span>classroom management</span>
                </a>
            </li><!-- End Shop Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="admin" asp-controller="Faculty" action="Index">
                    <i class="bi bi-people"></i>
                    <span>Faculty management</span>
                </a>
            </li><!-- End Member Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="admin" asp-controller="Lecturer" action="Index">
                    <i class="bi bi-layout-text-window-reverse"></i><span>Lecturer management</span>
                </a>
            </li><!-- End ThanhToan Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="Admin" asp-controller="Subject" asp-action="Index">
                    <i class="bi bi-layout-text-window-reverse"></i><span>Subject management</span>
                </a>
            </li><!-- End ThanhToan Nav -->
            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="Admin" asp-controller="Course" asp-action="Index">
                    <i class="bi bi-layout-text-window-reverse"></i><span>Course management</span>
                </a>
            </li><!-- End ThanhToan Nav -->
            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="Admin" asp-controller="Role" asp-action="Index">
                    <i class="bi bi-layout-text-window-reverse"></i><span>Role management</span>
                </a>
            </li><!-- End ThanhToan Nav -->
            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="Admin" asp-controller="RoleGroup" asp-action="Index">
                    <i class="bi bi-layout-text-window-reverse"></i><span>RoleGroup management</span>
                </a>
            </li><!-- End ThanhToan Nav -->
            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="Admin" asp-controller="Account" asp-action="Index">
                    <i class="bi bi-layout-text-window-reverse"></i><span>Account management</span>
                </a>
            </li><!-- End ThanhToan Nav -->
            <li class="nav-heading">Pages</li>
            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-box-arrow-in-right"></i>
                    <span>Trang khách hàng</span>
                </a>
            </li><!-- End Login Page Nav -->


        </ul>

    </aside><!-- End Sidebar-->
    <main id="main" class="main">
        @RenderBody()
    </main><!-- End Main -->

    <footer id="footer" class="footer">
    </footer><!-- End Footer -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->

    <script src="~/admin/assets/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="~/admin/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/admin/assets/vendor/chart.js/chart.umd.js"></script>
    <script src="~/admin/assets/vendor/echarts/echarts.min.js"></script>
    <script src="~/admin/assets/vendor/quill/quill.js"></script>
    <script src="~/admin/assets/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="~/admin/assets/vendor/tinymce/tinymce.min.js"></script>
    <script src="~/admin/assets/vendor/php-email-form/validate.js"></script>

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.css">
    <script type="text/javascript" charset="utf8" src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ajax-unobtrusive/3.2.6/jquery.unobtrusive-ajax.min.js"></script>

    <!-- Template Main JS File -->
    <script src="~/admin/assets/js/main.js"></script>

    <script src="~/react/assets/index-CmBJohSG.js"></script>

    @await RenderSectionAsync("Scripts", required: false)


</body>

</html>
